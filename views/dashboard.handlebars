
<div class="row">

  <div class="column">
    <h2>Fill the application form for any Volunteer vacants</h2>

    <form class="new-post-form">
      <div>
        <label for="post-id">ID</label>
        <input type="text" id="post-title" name="post-title" />
        <label for="post-title">Title</label>
        <input type="text" id="post-title" name="post-title" />
      </div>
      <div>
        <label for="post-url">Link</label>
        <input id="post-url" name="post-url" />
      </div>
      <div>
        <label for="post-comment">Comment:</label>
        <input id="post-comment" name="post-comment" />
      </div>
      <button type="submit" class="btn">Create</button>
    </form>
  </div>
</div>



{{#if posts.length}}
<div class="column">
  <h2>Applied Positions</h2>
  <ol>
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
    </li>
    {{/each}}
  </ol>
</div>
{{/if}}

<script src="/javascript/add-post.js"></script>